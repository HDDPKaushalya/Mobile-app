<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clothacc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:background="@color/black">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nyun"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/gold">

        </TextView>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                android:id="@+id/ga1"
                android:layout_width="match_parent"
                android:layout_height="388dp"
                android:src="@drawable/firstgirl1"
                android:layout_margin="20dp">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deps"
                android:textColor="@color/gold"
                android:textSize="20sp">
            </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Modano"
                    android:textColor="@color/gold"
                    android:gravity="center"
                    android:textSize="15sp">

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/colors"
                    android:textColor="@color/gold">

                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:contentDescription="@string/picture"
                        android:id="@+id/ga1c1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:src="@color/lightblue">

                    </ImageView>

                    <ImageView
                        android:contentDescription="@string/picture"
                        android:id="@+id/ga1c2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:src="@color/red">

                    </ImageView>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Sizes"
                    android:textColor="@color/gold">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/SmallSize"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/images__2_"
                        android:layout_marginLeft="10dp">

                    </ImageView>
                    <ImageView
                        android:id="@+id/mediamSize"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/mediam"
                        android:layout_marginLeft="10dp">

                    </ImageView>
                    <ImageView
                        android:id="@+id/largeSize"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/large"
                        android:layout_marginLeft="10dp">

                    </ImageView>
                    <ImageView
                        android:id="@+id/xlSize"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/xl"
                        android:layout_marginLeft="10dp">

                    </ImageView>

                </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Price"
                        android:textColor="@color/gold">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/number"
                        android:textColor="@color/lightblue"
                        android:layout_marginLeft="50dp"
                        android:textSize="20sp">

                    </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/quanty"
                            android:textColor="@color/gold"
                            android:layout_marginEnd="10dp">
                        </TextView>

                    <EditText
                        android:id="@+id/quan"
                        android:autofillHints="phone"
                        android:inputType="number"
                        android:hint="@string/val"
                        android:layout_width="102dp"
                        android:layout_height="48dp"
                        android:layout_marginStart= "10dp"
                        android:textColor="@color/gold"
                        android:textSize="15sp">
                    </EditText>
                </LinearLayout>
                <Button
                    android:id="@+id/cartb"
                    android:layout_margin="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Addcart"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/gold">
                </Button>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>